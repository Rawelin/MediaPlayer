<Window x:Class="Media_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player"
        mc:Ignorable="d"
        Title="MainWindow" Height="135" Width="400" ResizeMode="NoResize" Icon="./Resources/play.png"
        WindowStyle="None" MouseDown="Window_MouseDown">


    <Window.Resources>

        <Style x:Key="GridViewColumnHeaderStyle1" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                        <Border BorderThickness="0,0,0,1" BorderBrush="DimGray" Background="Transparent">
                            <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="3,3,3,3" Width="{TemplateBinding Width}" TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="{x:Type ListViewItem}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true" >
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="Gray" />
                </Trigger>
                <Trigger Property="IsSelected" Value="true" >
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Background" Value="Gray" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyFocusVisualStyte" >
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle x:Name="FocusStyle" StrokeDashArray="4 4" RadiusX="5" RadiusY="5" Fill="Transparent"
                           Stroke="#99029cc7" StrokeThickness="1" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButtonStyle1" TargetType="{x:Type RepeatButton}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border  BorderThickness="1" BorderBrush="#222225" Background="#333333" Height="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatButtonStyle2" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border SnapsToDevicePixels="True" Background="#5734b4e3"  BorderThickness="1" BorderBrush="DimGray" Height="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid>
                            <Border Name="outerBorder"
                            Background="#5734b4e3"
                            BorderBrush="#5734b4e3"
                            Height="16" Width="16" Opacity="1" BorderThickness="2" CornerRadius="13"/>
                            <Border Name="innerBorder"
                            Background="#aa34b4e3"
                            BorderBrush="#FF34b4e3"
                            Height="10" Width="10" CornerRadius="5" Opacity="1" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerBorder" Property="BorderBrush" Value="#BB34b4e3" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="outerBorder" Property="Background" Value="#55ACACAC" />
                                <Setter TargetName="outerBorder" Property="BorderBrush" Value="#55ACACAC" />
                                <Setter TargetName="innerBorder" Property="Width" Value="4" />
                                <Setter TargetName="innerBorder" Property="Height" Value="4" />
                                <Setter TargetName="innerBorder" Property="CornerRadius" Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="HorizontalSlider" TargetType="{x:Type Slider}">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TickBar x:Name="TopTick" Visibility="Collapsed" Fill="LightGray" Placement="Top" SnapsToDevicePixels="True"
                 Height="4" Margin="0,0,0,2" />
                <Border x:Name="TrackBackground"
                Grid.Row="1"
                Margin="10,0"
                BorderThickness="2"
                BorderBrush="LightGray"
                VerticalAlignment="Center" Height="4" />
                <Track x:Name="PART_Track" Grid.Row="1">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.DecreaseLarge}"  Style="{StaticResource SliderRepeatButtonStyle2}" />
                    </Track.DecreaseRepeatButton>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource SliderRepeatButtonStyle1}"/>
                    </Track.IncreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb x:Name="Thumb" Style="{StaticResource SliderThumbStyle}" />
                    </Track.Thumb>
                </Track>
                <TickBar x:Name="BottomTick" Grid.Row="2" Visibility="Collapsed" Fill="LightGray" Placement="Bottom"
                 SnapsToDevicePixels="True" Height="4" Margin="0,2,0,0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="TickPlacement" Value="TopLeft">
                    <Setter TargetName="TopTick" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="TickPlacement" Value="BottomRight">
                    <Setter TargetName="BottomTick" Property="Visibility" Value="Visible" />
                </Trigger>
                <Trigger Property="TickPlacement" Value="Both">
                    <Setter TargetName="TopTick" Property="Visibility" Value="Visible" />
                    <Setter TargetName="BottomTick" Property="Visibility" Value="Visible" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="{x:Type Slider}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource MyFocusVisualStyte}" />
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="MinWidth" Value="104" />
                    <Setter Property="MinHeight" Value="21" />
                    <Setter Property="Template" Value="{StaticResource HorizontalSlider}" />
                </Trigger>
                <!--
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="MinWidth" Value="21" />
                    <Setter Property="MinHeight" Value="104" />
                    <Setter Property="Template" Value="{StaticResource VerticalSlider}" />
                </Trigger>
                -->
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Border BorderThickness="1,1,1,1" BorderBrush="LightGray" x:Name="playerBorder">
        <StackPanel Background="#383e47">
            <StackPanel>
                <ProgressBar x:Name="volumeProgressBar" HorizontalAlignment="Left" Height="4" VerticalAlignment="Top" Width="399" RenderTransformOrigin="0.5,0.5"  Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Margin="0,0,-1,0"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180*"/>
                    <ColumnDefinition Width="163*"/>
                    <ColumnDefinition Width="55*"/>
                </Grid.ColumnDefinitions>
                <Button Width="17" Height="15" Margin="35.75,0,2,0" Click="Close_app" Background="Transparent" Grid.Column="2" >
                    <StackPanel>
                        <Image Source="./Resources/close.ico" Height="10" Width="10" />
                    </StackPanel>
                </Button>
                <Button Width="17" Height="15" Margin="16.75,0,21,0" Click="Minimize_app" Background="Transparent" VerticalAlignment="Top" Grid.Column="2">
                    <StackPanel>
                        <Image Source="./Resources/minimize.png" Height="10" Width="10" />
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Height="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="367*"/>
                    <ColumnDefinition Width="31*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="textBox" IsReadOnly="True" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="No Track Selected" VerticalAlignment="Top" Width="292" Background="Transparent" Margin="5,2,0,0" Foreground="White" BorderBrush="Transparent"/>
                <Label x:Name="elapsedTime" Content="00:00" HorizontalAlignment="Left" Margin="302,1,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.433,0.551" Foreground="#ffffff"  />
                <Label x:Name="pipe" Width="15" Content="|" HorizontalAlignment="Left" Margin="337,1,0,16" Foreground="#ffffff" />
                <Label x:Name="duration" Content="00:00" HorizontalAlignment="Left" Margin="347,1,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.433,0.551" Foreground="#5734b4e3" Grid.ColumnSpan="2"/>

            </Grid>

            <Grid MouseWheel="Grid_MouseWheel"  Height="60" >

                <Slider x:Name="durationSliderProgress" Thumb.DragStarted="SliderProgress_DragStarted" Thumb.DragCompleted="SliderProgress_DragCompleted" 
                   ValueChanged="SliderProgress_ValueChanged"  HorizontalAlignment="Left" Margin="141,5,0,0" VerticalAlignment="Top" Height="28" Width="238"/>
                <Slider x:Name="volumeSlider" Margin="261,25,19,-1" Orientation="Horizontal" Thumb.DragStarted="SliderVolume_DragStarted" Thumb.DragCompleted="SliderVolume_DragCompleted"/>
                <Button  HorizontalAlignment="Left" Margin="8,7,0,0" VerticalAlignment="Top" Width="40" Click="Play_Click" Background="transparent" ToolTip="Play">
                    <StackPanel>
                        <Image Source="./Resources/play.png" Height="15" Width="15"/>
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Left" Margin="52,7,0,0" VerticalAlignment="Top" Width="40" Click="Pause_Click" Background="Transparent" >
                    <StackPanel>
                        <Image Source="./Resources/pause.png" Height="15" Width="15"/>
                    </StackPanel>
                </Button>
                <Button  HorizontalAlignment="Left" Margin="97,7,0,0" VerticalAlignment="Top" Width="40" Click="Stop_Click" Background="Transparent">
                    <StackPanel>
                        <Image Source="./Resources/stop.png" Height="15" Width="15" />
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Left" Margin="180,33,0,0" VerticalAlignment="Top" Width="40" Click="Add_Click" RenderTransformOrigin="1.675,0.409" Background="Transparent">
                    <StackPanel>
                        <Image Source="./Resources/add.png" Height="15" Width="15" />
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Left" Margin="139,33,0,0" VerticalAlignment="Top" Width="40" Click="Save_Click" Background="Transparent">
                    <StackPanel>
                        <Image Source="./Resources/save.png" Height="15" Width="15" />
                    </StackPanel>
                </Button>
                <Button HorizontalAlignment="Left" Margin="97,33,0,0" VerticalAlignment="Top" Width="40" Click="Load_Click" Background="Transparent">
                    <StackPanel>
                        <Image Source="./Resources/load.png" Height="15" Width="15"/>
                    </StackPanel>
                </Button>
                <Button  Width="40" Height="20" Margin="222,34,136,6" Click="Deletet_Click" Background="Transparent">
                    <StackPanel>
                        <Image Source="./Resources/remove.png" Height="14" Width="15" RenderTransformOrigin="0.556,-0.244"/>
                    </StackPanel>
                </Button>
                <Button  Width="40" Height="20" Margin="9,34,349,6" Click="Forward_Click" Background="Transparent">
                   F
                </Button>
                <Button  Width="40" Height="20" Margin="53,34,305,6" Click="Backward_Click" Background="Transparent">
                   B
                </Button>


            </Grid>
            <StackPanel>
                <ProgressBar x:Name="durationProgressBar" HorizontalAlignment="Left" Height="4" VerticalAlignment="Top" Width="399"
                     Value="{Binding Volume, ElementName=mePlayer}" Foreground="red" Margin="0,0,-1,0" Background="Transparent" BorderBrush="Transparent" />
            </StackPanel>
            <StackPanel x:Name="listStack" Height="0" Background="#222225">
                <ListView x:Name="playLista"  HorizontalAlignment="Left"  Margin="1,3,0,0"  VerticalAlignment="Top" Width="396" MaxHeight="0"
                  RenderTransformOrigin="0.485,0.765"  MouseDoubleClick="ListView_MouseDoubleClick" Background="#222225" 
                  BorderBrush="#FF343A44" Foreground="White" 
                   AllowDrop="True" MouseLeftButtonDown="ListView_MouseLeftButtonDown" >

                    <ListView.View >
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}"  >
                            <GridViewColumn Header="Artist" Width="380"/>
                        </GridView>
                    </ListView.View>

                </ListView>
            </StackPanel>
            <Grid Background="#222225" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18*"/>
                    <ColumnDefinition Width="181*"/>
                </Grid.ColumnDefinitions>
                <Button Content="PLAYLIST" FontSize="8" Foreground="#ffffff" Click="ShowPlayList" Height="16" Width="100" Background="transparent" HorizontalAlignment="Center" BorderBrush="Transparent" Margin="113.333,2,149,3" Grid.Column="1">

                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
